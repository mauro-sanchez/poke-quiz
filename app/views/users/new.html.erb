<%= render layout: 'main_card' do %>
  <%= form_with model: @user, url: users_path do |f| %>
    <div class="mb-3">
      <%= f.label :username, "Username", class: "form-label" %>
      <%= f.text_field :username, required: true, class: "form-control", autocomplete: "username" %>
    </div>
    <div class="mb-3">
      <%= f.label :email, "Email address", class: "form-label" %>
      <%= f.email_field :email, required: true, class: "form-control", autocomplete: "email" %>
    </div>
    <div class="mb-3">
      <%= f.label :password, "Password", class: "form-label" %>
      <%= f.password_field :password, required: true, class: "form-control", autocomplete: "current-password" %>
    </div>
    <%= f.submit "Create account", class: "btn btn-danger", id: "create_account_btn" %>
    <%= link_to "Already have an account?", new_session_path, class: "ms-3" %>
  <% end %>
<% end %>
